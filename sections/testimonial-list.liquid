<h2 class="{{ section.settings.heading_size }}">{{ section.settings.heading }}</h2>

{% schema %}
  {
    "name": "Testimonials",
    "settings": [
      {
        "type": "header",
        "content": "Text"
      },
      {
        "type": "inline_richtext",
        "id": "heading",
        "label": "Heading",
        "default": "Testimonials",
      },
      {
        "type": "select",
        "id": "heading_size",
        "label": "Heading size",
        "default": "h1",
        "options": [
          { "value": "h2", "label": "Small" },
          { "value": "h1", "label": "Medium" },
          { "value": "h0", "label": "Large" },
          { "value": "hxl", "label": "Extra large" },
          { "value": "hxxl", "label": "Extra extra Large" }
        ]
      },
      {
        "type": "inline_richtext",
        "id": "description",
        "label": "Description",
      },
      {
        "type": "select",
        "id": "description_style",
        "label": "Description style",
        "default": "body",
        "options": [
          { "value": "body", "label": "Body" },
          { "value": "subtitle", "label": "Subtitle" },
          { "value": "uppercase", "label": "Uppercase" },
        ]
      },
      {
        "type": "header",
        "content": "Testimonial layout"
      },
      {
        "type": "color_scheme",
        "id": "color_scheme",
        "default": "scheme_1",
        "label": "Color scheme"
      },
      {
        "type": "header",
        "content": "Padding"
      },
      {
        "type": "range",
        "id": "top_padding",
        "label": "Top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "default": 40
      },
      {
        "type": "range",
        "id": "bottom_padding",
        "label": "Bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "default": 40
      }
    ],
    "presets": [
      {"name": "Testimonials"}
    ],
  }
{% endschema %}
