<div class="text-block text-{{ block.settings.alignment }}">
  {{ block.settings.text }}
</div>

{% stylesheet %}
  .text-left {
    text-align: left;
  }

  .text-center {
    text-align: center;
  }

  .text-right {
    text-align: right;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Testimonial",
  "settings": [
    {
      "type": "textarea",
      "id": "text",
      "label": "Testimonial"
    },
    {
      "type": "text",
      "id": "name",
      "label": "Name",
      "placeholder": "e.g. Jane Doe"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Customer image"
    },
    {
      "type": "select",
      "id": "alignment",
      "label": "Text alignment",
      "default": "left",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Testimonial",
      "settings": {
        "text": "Lorem ipsum dolor sit amet.",
        "name": "Jane Doe"
      }
    }
  ]
}

{% endschema %}
