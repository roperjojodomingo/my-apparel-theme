{% render 'testimonial',
  customer_testimonial: block.settings.customer_testimonial,
  customer_image: block.settings.customer_image,
  customer_name: block.settings.customer_name
%}

{% schema %}
{
  "name": "Testimonial",
  "settings": [
    {
      "type": "text",
      "id": "customer_name",
      "label": "Customer name"
    },
    {
      "type": "inline_richtext",
      "id": "customer_testimonial",
      "label": "Customer testimonial"
    },
    {
      "type": "image_picker",
      "id": "customer_image",
      "label": "Customer image"
    }
  ],
  "presets": [
    {
      "name": "Testimonial",
      "settings": {}
    }
  ]
}
{% endschema %}
