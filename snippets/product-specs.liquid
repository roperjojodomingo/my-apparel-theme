{% comment %}
  Renders product specs

  Accepts:
  - specs: {JSON}
{% endcomment %}

{{ 'metafields.css' | asset_url | stylesheet_tag }}

<div>
  {{ specs }}
  <label class="metafields-label">The Finer Details</label>
  <table>
    <tbody>
      {% for spec in specs %}
        <tr>
          <th>{{ spec[0] | capitalize }}</th>
          <td>{{ spec[1] }}</td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
</div>
